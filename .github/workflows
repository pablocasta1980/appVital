name: CI-CD appVital

on:
  push:
    branches:
      - master
  pull_request:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: ðŸ”¹ Clonar repositorio
        uses: actions/checkout@v4

      - name: ðŸ”¹ Configurar Java 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'

      - name: ðŸ”¹ Dar permisos a Gradle
        run: chmod +x gradlew

      - name: ðŸ”¹ Compilar y probar
        run: ./gradlew clean build --no-daemon

      - name: ðŸ”¹ Construir imagen Docker
        run: docker build -t appvital:latest .
